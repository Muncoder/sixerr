<div class="panel panel-default">
	<div class="panel-heading">
		<h1>New Service</h1>
	</div>
	<div class="panel-body">
		<%= form_for @service do |f| %>
			
			<% if @service.errors.any? %>
				<ul>
					<% @service.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			<% end %>


			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :price %>
				<%= f.select :price, [ ["£6","6"], ["£12","12"], ["£18","18"], ["£24","24"],], class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :delivery_time %>
				<%= f.text_field :delivery_time, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :revisions %>
				<%= f.text_field :revisions, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :requirements %>
				<%= f.text_field :requirements, class: "form-control" %>
			</div>
			
			<%= f.submit "Create Service", class: "btn btn-success"  %>
		<% end %>
	</div>
</div>