<div class="row">
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<center>
					<%= image_tag get_avatar_url(current_user), class: "img-circle img-responsive" %>
					<h3><%= current_user.full_name %></h3>
				</center>
			</div>
			<div class="panel-body">
				
			</div>
		</div>
	</div>

	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>My Orders</h3>
			</div>
			<div class="panel-body">
				<% @orders.each do |order| %>
					<div class="row">

						<div class="col-md-2">
							<%= link_to service_path(order.service) do %>
								<%= image_tag order.service.image.url(:thumb) %>
							<% end %>
							<hr>
						</div>

						<div class="col-md-2">
							<%= link_to service_path(order.service) do %>
								<%= order.service.title %>
							<% end %>
							<hr>
						</div>

						<div class="col-md-2">
							<h5>
								Quantity: <%= order.quantity %> <br>
								Price: <%= order.price %>
							</h5>
						</div>

						<div class="col-md-2">
							<h5>
								<%= order.created_at.strftime('%b %d, %Y') %>
							</h5>
						</div>

						<div class="col-md-2">
							<h5>
								Total Price: <%= order.total_price %>
							</h5>
						</div>

						<div class="col-md-2">
							<%= link_to "Delete", order_path(order), method: :delete, data: {confirm: "Sure to delete?"}, class: "btn btn-xs btn-danger" %>
						</div>

					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>