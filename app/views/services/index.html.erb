<h1>Services</h1>
<br>
<table class="table table-bordered tabled-striped table-condensed">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Delivery <br>Time</th>
			<th>Revisions</th>
			<th>Requirements</th>
		</tr>
	</thead>
	<tbody>
		<% @services.each do |service| %>
			<tr>
				<td><%= service.title %></td>
				<td><%= service.description %></td>
				<td><%= service.price %></td>
				<td><%= service.delivery_time %></td>
				<td><%= service.revisions %></td>
				<td><%= service.requirements %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<hr>
<%= link_to "New Service", new_service_path, class: "btn btn-info"  %>